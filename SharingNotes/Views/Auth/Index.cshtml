@{
    @model SharingNotes.Models.Login
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4"
         style="width: 380px; border-radius: 18px; backdrop-filter: blur(10px);">
        <h3 class="text-center mb-4 fw-bold">Login</h3>
        @* Show alert if ModelState has errors *@
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger fw-semibold" role="alert">
                <strong>Login Failed</strong>
                <hr />
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p class="mb-0">@error.ErrorMessage</p>
                }
            </div>
        }
        <form asp-controller="Auth" asp-action="Index" method="post">
            <div class="mb-3">
                <label class="form-label fw-semibold">UserName</label>
                <input type="text" class="form-control form-control-lg" placeholder="Enter your Username" asp-for="Username">
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Password</label>
                <input type="password" class="form-control form-control-lg" placeholder="Enter your password" asp-for="Password">
            </div>
            <div class="d-flex justify-content-between mb-3">
                <div>
                    <input type="checkbox" id="rememberMe">
                    <label for="rememberMe">Remember me</label>
                </div>
                <a asp-controller="Auth" asp-action="Forget" class="text-decoration-none">Forgot Password?</a>
            </div>
            <button class="btn btn-primary w-100 btn-lg">Login</button>
            <p class="text-center mt-3">
                Don't have an account?
                <a asp-controller="Auth" asp-action="SignUP" class="text-decoration-none fw-semibold">Register</a>
            </p>
        </form>
    </div>
</div>