@model SharingNotes.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password - Rozerpage";
}

<div class="content-area">
    <div class="scrollable-cards">
        <div class="d-flex align-items-center justify-content-center min-vh-100 p-3">
            <div class="bg-white rounded-4 shadow-lg p-4 p-md-5" style="max-width: 480px; width: 100%;">

                <!-- Logo Section -->
                <div class="text-center mb-4">
                    <h1 class="fw-bold mb-2"
                        style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                               -webkit-background-clip: text;
                               -webkit-text-fill-color: transparent;
                               background-clip: text;
                               font-size: 2rem;">
                        Rozerpage
                    </h1>
                    <p class="text-secondary mb-0">Reset Your Password</p>
                </div>

                <!-- Reset Password Form -->
                <form asp-action="ResetPassword" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label fw-semibold text-dark small"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <span>🔒</span>
                            </span>
                            <input asp-for="NewPassword"
                                   class="form-control border-start-0 ps-0"
                                   placeholder="Enter new password"
                                   style="border-left: none;" />
                        </div>
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label fw-semibold text-dark small"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <span>🔒</span>
                            </span>
                            <input asp-for="ConfirmPassword"
                                   class="form-control border-start-0 ps-0"
                                   placeholder="Confirm new password"
                                   style="border-left: none;" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit"
                            class="btn btn-lg w-100 text-white fw-semibold rounded-3"
                            style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                                   border: none;
                                   padding: 12px;">
                        Reset Password
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}